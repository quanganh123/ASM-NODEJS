<header>
    <div class="header">
        <div class="logo">
            <img src="/img/icons/logo-01.png">
        </div>
        <div class="menu">
            <a href="/">Home</a>
            <a class="home" href="/shop">Shop</a>
            <a href="">Features</a>
            <a href="">Blog</a>
            <a href="">About</a>
            <a href="">Contact</a>
        </div>
        <div class="btn">
            <a class="seach"><i class="fa fa-search"></i></a>
            <a class="cart"><i class="fas fa-shopping-cart"></i></a>
            <a class="love"><i class="far fa-heart"></i></a>
        </div>
    </div>
</header>
<div class="shop">
    <div class="products">
        <button>ALL Products</button>
        <button>Wonmen</button>
        <button>Men</button>
        <button>Bag</button>
        <button>Shoes</button>
        <button>Watches</button>
    </div>
    <div class="search">
        <i class="fa fa-search"></i>
        <input type="text" placeholder="Search...">
    </div>
</div>

<div class="shop-product">

<div class="left"></div>
    {{#each courses}}

    <div class="img-name-price">

        <img src="{{this.image}}">

        <div class="name-price">
            <div class="name-product">
                <h5>{{this.name}}</h5>
                <i class="far fa-heart"></i>
            </div>
            

            <p class="price-product">{{this.price}}</p>

        </div>

    </div>

    {{/each}}
    <div class="right"></div>

</div>
<div class="load-mode">
    <a href=""><button>LOAD MODE</button></a>
</div>